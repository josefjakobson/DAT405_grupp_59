from sklearn.datasets import load_iris
from sklearn.neighbors import KNeighborsClassifier
from sklearn.metrics import confusion_matrix, classification_report
from sklearn.model_selection import train_test_split

# Loads dataset
iris = load_iris()
X = iris.data
y = iris.target


# Splits data into test and training
X_train, X_test, y_train, y_test = train_test_split(X, y, test_size=0.5, random_state=0)

# Creates the knn model


k_list = [1,5,10,50]

for i in range(len(k_list)):
    classify_KNeighbours = KNeighborsClassifier(n_neighbors=k_list[i])

# Fit the model to the training data
    classify_KNeighbours.fit(X_train, y_train)

# Predicts dataset class labels
    y_prediction = classify_KNeighbours.predict(X_train)


# Creates the confusion matrix and classification report
    confusion_mat = confusion_matrix(y_test, y_prediction)
    print(f"Confusion Matrix k = {k_list[i]}: \n", confusion_mat)

    class_report = classification_report(y_test, y_prediction)
    print(f"\nClassification Report k = {k_list[i]}: \n", class_report)